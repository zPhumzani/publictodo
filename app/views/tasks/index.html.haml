%h1 Listing tasks

%table
  %thead
    %tr
      %th User
      %th Content
      %th Slug
      %th Private
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.user
        %td= task.content
        %td= task.slug
        %td= task.private
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
