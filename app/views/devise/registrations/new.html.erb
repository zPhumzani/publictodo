<div class="card-block form-signin">
  <div class="text-xs-center">
  	<h1><i class="fa fa-user"></i>Register:</h1>
  </div>
  <hr />

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "Last Name" %>
    <%= f.input :last_name, required: true, label: false, placeholder: "First Name" %>
    <%= f.input :email, required: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Password" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation" %>
  </div>

  <div class="form-actions text-xs-center">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block'  %>
  </div>
<% end %>
<hr />
<div class="text-xs-center">
  <%= render "devise/shared/links" %>
</div>
</div>